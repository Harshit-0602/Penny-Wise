<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration or Sign Up form in HTML CSS | CodingLab</title>
    <style>
      @import url("https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap");
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }
      body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #0f1035;
      }
      .wrapper {
        position: relative;
        max-width: 430px;
        width: 100%;
        background-color: rgb(127, 199, 217);
        padding: 34px;
        border-radius: 6px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
      }
      .wrapper a {
        text-decoration: none;
      }
      .wrapper h2 {
        position: relative;
        font-size: 22px;
        font-weight: 600;
        color: #333;
      }
      .wrapper h2::before {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        height: 3px;
        width: 28px;
        border-radius: 12px;
        background-color: #0f1035;
      }
      .wrapper form {
        margin-top: 30px;
      }
      .wrapper form .input-box {
        height: 52px;
        margin: 18px 0;
      }
      form .input-box input {
        height: 100%;
        width: 100%;
        outline: none;
        padding: 0 15px;
        font-size: 17px;
        font-weight: 400;
        color: white;
        border-bottom-width: 2.5px;
        border-radius: 6px;
        transition: all 0.3s ease;
        background-color: #dcf2f1;
      }
      .input-box input:focus,
      .input-box input:valid {
        background-color: #0f1035;
      }
      form .policy {
        display: flex;
        align-items: center;
      }
      form h3 {
        color: #707070;
        font-size: 14px;
        font-weight: 500;
        margin-left: 10px;
      }
      .input-box.button input {
        color: #fff;
        letter-spacing: 1px;
        border: none;
        background-color: #0f1035;
        cursor: pointer;
      }
      .input-box.button input:hover {
        background-color: #0f1035;
      }
      form .text h3 {
        color: #333;
        width: 100%;
        text-align: center;
      }
      form .text h3 a {
        color: #0f1035;
        text-decoration: none;
      }
      form .text h3 a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <a href="/"><h2>Penny-wise</h2></a>
      <form action="/user/login" method="post">
        <!-- <div class="input-box">
        <input type="text" placeholder="Enter your name" required>
      </div> -->
        <!-- <div class="input-box">
        <input type="text" placeholder="Enter the username" required>
      </div>
      <div class="input-box">
        <input type="text" placeholder="Enter mobile" required>
      </div> -->
        <div class="input-box">
          <input type="text" name="email" placeholder="Enter your email" required />
        </div>
        <div class="input-box">
          <input type="password" name="password" placeholder="Enter your password" required />
        </div>
        <!-- <div class="input-box">
        <input type="password" placeholder="Confirm password" required>
      </div> -->
        <!-- <div class="policy">
        <input type="checkbox">
        <h3>I accept all terms & condition</h3>
      </div> -->
        <div class="input-box button">
          <input type="Submit" value="Login" />
        </div>
        <div class="text">
          <h3>Don't have an account? <a href="/user/register">Register now</a></h3>
        </div>
      </form>
    </div>
  </body>
</html>
